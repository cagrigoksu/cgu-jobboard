@{
}

<h1> Log In </h1>
<br />

<form method="POST" asp-controller="User" asp-action="LogIn">

    <div class="form-floating mb-3">
        <input class="form-control" id="email" style="max-width:20em;" placeholder="e-mail" autocomplete="off"
            type="email" name="email">
        <label for="email">Email</label>
    </div>
    <br>
    <div class="form-floating mb-3">
        <input class="form-control" id="pwd" style="max-width:20em;" placeholder="password" autocomplete="off"
            type="password" name="pwd"><br><br><br>
        <label for="pwd">Password</label>
    </div>

    <input type="submit" class="btn btn-dark" name="Log In">
    
    @if (ViewBag.Message != null)
    {
        <br /> <br />
        <span style="color:red;">@ViewBag.Message</span>
    }

</form>
