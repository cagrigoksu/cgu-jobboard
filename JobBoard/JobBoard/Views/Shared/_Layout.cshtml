@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>JobBoard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/JobBoard.styles.css" asp-append-version="true" />
    <script src="~/js/site.js"></script>
    @* <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"> *@
    @* <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script> *@
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CGU JobBoard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @{
                            if (HttpContextAccessor?.HttpContext?.Session.GetString("Id") == null)
                            {
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogIn"> Log In </a>
                                        <div class="dropdown-content">
                                            <a asp-controller="User" asp-action="LogOn"> Log On </a>
                                        </div>
                                    </div>
                                </li>
                            }
                            else
                            {
                                if (HttpContextAccessor?.HttpContext.Session.GetInt32("CompanyUser") == 1)
                                {
                                    <li class="nav-item">
                                        <div class="dropdown">
                                            <a class="dropbtn nav-link text-dark">@HttpContextAccessor?.HttpContext.Session.GetString("Email")</a>
                                            <div class="dropdown-content">
                                                <a asp-controller="Poster" asp-action="Dashboard">Dashboard</a>
                                                <a href="#">Profile</a>
                                                <a asp-controller="User" asp-action="LogOut">Log Out</a>
                                            </div>
                                        </div>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        @* <a class="nav-link text-dark">@HttpContextAccessor?.HttpContext.Session.GetString("Email")</a> *@
                                        <div class="dropdown">
                                            <a class="dropbtn nav-link text-dark">@HttpContextAccessor?.HttpContext.Session.GetString("Email")</a>
                                            <div class="dropdown-content">
                                                <a asp-controller="JobApply" asp-action="AppliedJobs">Applied Jobs</a>
                                                <a asp-controller="User" asp-action="UserProfile">Profile</a>
                                                <a asp-controller="User" asp-action="LogOut">Log Out</a>
                                            </div>
                                        </div>
                                    </li>
                                }
                            }
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<!-- Modal -->
<div class="modal" tabindex="-1" role="dialog" id="formModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="modalClose()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                @* <input type="button" onclick="deleteJobPost('@Url.Action("DeleteJobPost")', @Model.Id)" class="btn btn-danger" value="Delete"> *@
                    
            </div>
        </div>
    </div>
</div>


<footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Cagri Goksu USTUNDAG - <a asp-area="" asp-controller="Home" asp-action="Status">Status</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
