@{
}
@model JobBoard.Models.View.JobPostViewModel


<h1>Your Posted Jobs</h1>

<input type="button" class="btn btn-warning" value="Post a New Job" onclick="@("window.location.href='" + @Url.Action("AddJobPost", "Poster") + "'");"/>
<br/>

<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostDate)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.jobs) {
            <tr onclick="@("window.location.href='" + @Url.Action("DetailJobPost", "Poster", new {id= item.Id, detail=true} ) + "'");">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostDate)
            </td>
            <td>
                @* <a asp-action="DetailJobPost" asp-route-id="@item.Id" asp-route-detail="@true">Details</a> | *@
                @* <a asp-action="EditJobPost" asp-route-id="@item.Id" asp-route-edit="@true">Edit</a> |  *@
                <a asp-action="JobApplicants" asp-route-jobId="@item.Id">Applications</a>
            </td>
        </tr>
    }
    </tbody>

</table>