@model JobBoard.Models.View.UserProfileViewModel

<form method="post" asp-action="UserProfile" asp-controller="User"  enctype="multipart/form-data">  
    <label for="nameInput">Name</label>
    <br />
    <input class="form-control" style="max-width:20em;" type="text" id="nameInput" asp-for="Name" />
    <br/>
    <label for="surnameInput">Surname</label>
    <br />
    <input class="form-control" style="max-width:20em;" type="text" id="surnameInput" asp-for="Surname" />
    <br/>
    <input class="form-control" style="max-width:20em;" type="text" id="emailInput" asp-for="Email" readonly />
    <br/>    
    <input class="form-control" style="max-width:20em;" type="text" id="phoneInput" asp-for="PhoneNumber" />
    <br/>
    <label for="resumeInput">Upload your resume</label>
    <br />
    <input class="form-control" style="max-width:20em;" type="file" id="resumeInput" asp-for="CV"/>
    <br/>
    <label for="motivationInput">Upload your motivation letter</label>
    <br />
    <input class="form-control" style="max-width:20em;" type="file" id="motivationInput" asp-for="MotivationLetter"/>
    <br/><br/>
    <input type="submit" value="save" class="btn btn-dark"/>
</form>
